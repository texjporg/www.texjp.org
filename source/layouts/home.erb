<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "Middleman" %></title>

    <link rel="shortcut icon" type="image/png" href="images/texjporglogo.png">

    <meta property="og:title" content="<%= current_page.data.title || "Middleman" %>">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://texjp.org/">
    <meta property="og:image" content="https://texjp.org/images/texjporglogo.png">
    <meta property="og:description" content="TeXjp.orgは日本語TeX開発コミュニティです。">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@MITLicense">
    <meta name="twitter:creator" content="@MITLicense">
    <meta name="twitter:title" content="日本語TeX開発コミュニティ">
    <meta name="twitter:image" content="https://texjp.org/images/texjporglogo.png">
    <meta name="twitter:description" content="TeXjp.orgは日本語TeX開発コミュニティです。">

    <!-- Bootstrap from Honoka -->
    <%= stylesheet_link_tag "site" %>

    <style type="text/css">
      /* Move down content because we have a fixed navbar that is 50px tall */
      body {
        padding-top: 4rem;
      }
    </style>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>

    <header>
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <div class="navbar-header">
            <a href="/" class="navbar-brand">
              <img src="images/texjporglogo.png" width="30" height="30"
                   alt="<%= current_page.data.title || "Middleman" %>" />
            </a>
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="navbar-collapse collapse" id="navbar-main">
            <ul class="nav navbar-nav">
              <li><a href="/">Top</a></li>
              <li><a href="https://github.com/texjporg/">GitHub</a></li>
              <li><a href="https://texwiki.texjp.org/">TeX Wiki</a></li>
              <li><a href="https://ml.texjp.org/">Mailing List</a></li>
              <li><a href="https://texlive.texjp.org/">TeX Live repos</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <!-- Jumbotron -->
    <div class="jumbotron">
      <div class="container">
        <h1><%= current_page.data.title || "Middleman" %></h1>
        <p class="lead">
          日本語TeX開発コミュニティ
        </p>
      </div>
    </div>
    
    <section class="section section-default">
      <div class="container">
        <%= yield %>
      </div>
    </section>
    
    <!-- Site footer -->
    <footer class="footer">
      <div class="container">
        <p>
          <a href="https://www.conoha.jp/" target="_blank">Powered by ConoHa</a><br />
          &copy; Japanese TeX Development Community 2017
        </p>
      </div>
    </footer>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <%= javascript_include_tag "site" %>
  </body>
</html>
